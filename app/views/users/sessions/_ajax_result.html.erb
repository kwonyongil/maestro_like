
<h2 class="small-title">sign up Maestro</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
          <div class="field">
            <%= f.text_field :name, autofocus: true, placeholder:"user name", class:"input-box"%>
          </div>
        
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder:"user email", class:"input-box" %>
          </div>
        
          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder:"password", class:"input-box" %>
          </div>
        
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"password confirmation", class:"input-box"  %>
          </div>
          <div class="field">
            <%= f.submit "sign up", class:"sign-up-page-button" %>
        <% end %>
          </div>